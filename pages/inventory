  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body onload="guard(); render();">
<nav class="navbar navbar-dark bg-success">
  <div class="container-fluid">
    <a class="navbar-brand" href="dashboard.html">← แดชบอร์ด</a>
    <span class="navbar-text">คลังวัตถุดิบ</span>
  </div>
</nav>

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>รายการคลัง</h4>
    <button class="btn btn-success" onclick="openForm()"><i class="fa fa-plus"></i> เพิ่มรายการ</button>
  </div>

  <div id="warn" class="mb-3"></div>

  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead><tr>
        <th>ชื่อ</th><th>หน่วย</th><th class="text-end">คงเหลือ</th><th class="text-end">ขั้นต่ำ</th><th class="text-end">ราคา/หน่วย</th><th class="text-end">จัดการ</th>
      </tr></thead>
      <tbody id="rows"></tbody>
    </table>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="invModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form onsubmit="saveInv(event)">
        <div class="modal-header">
          <h5 class="modal-title" id="invTitle">เพิ่มรายการ</h5>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="iid">
          <div class="mb-2">
            <label class="form-label">ชื่อ</label>
            <input id="iname" class="form-control" required>
          </div>
          <div class="mb-2">
            <label class="form-label">หน่วย</label>
            <input id="iunit" class="form-control" placeholder="กระสอบ/ลิตร/กก." required>
          </div>
          <div class="mb-2">
            <label class="form-label">คงเหลือ</label>
            <input id="iqty" type="number" class="form-control" value="0" min="0">
          </div>
          <div class="mb-2">
            <label class="form-label">ขั้นต่ำ</label>
            <input id="imin" type="number" class="form-control" value="0" min="0">
          </div>
          <div class="mb-2">
            <label class="form-label">ราคา/หน่วย (บาท)</label>
            <input id="iprice" type="number" class="form-control" value="0" min="0" step="0.01">
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
          <button class="btn btn-success" type="submit">บันทึก</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div id="toast"></div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
/* ===== include app.js (ย่อ) ===== */
</script>
<script>
let editing = null;
function render(){
  const rows = document.getElementById('rows');
  const inv = LS.get("inventory", []);
  rows.innerHTML = "";
  let low = [];
  inv.forEach(it=>{
    if(num(it.qty)<=num(it.min)) low.push(it);
    rows.innerHTML += `
      <tr>
        <td>${it.name}</td>
        <td>${it.unit}</td>
        <td class="text-end">${it.qty}</td>
        <td class="text-end">${it.min}</td>
        <td class="text-end">${it.price.toLocaleString()}</td>
        <td class="text-end">
          <div class="btn-group btn-group-sm">
            <button class="btn btn-outline-secondary" onclick='openForm("${it.id}")'><i class="fa fa-pen"></i></button>
            <button class="btn btn-outline-primary" onclick='addQty("${it.id}")'>+ เพิ่ม</button>
            <button class="btn btn-outline-warning" onclick='useQty("${it.id}")'>- ใช้</button>
            <button class="btn btn-outline-danger" onclick='delInv("${it.id}")'><i class="fa fa-trash"></i></button>
          </div>
        </td>
      </tr>`;
  });
  const warn = document.getElementById('warn');
  if(low.length){
    warn.innerHTML = `<div class="alert alert-warning">
      <strong>เตือนสต็อกต่ำ:</strong> ${low.map(x=>x.name).join(", ")}
    </div>`;
    logEvent("inv.low", "พบสต็อกต่ำ", {items: low.map(x=>x.name)});
  }else warn.innerHTML = "";
}
function openForm(id){
  const it = LS.get("inventory", []).find(x=>x.id===id);
  document.getElementById('invTitle').innerText = id?"แก้ไขรายการ":"เพิ่มรายการ";
  document.getElementById('iid').value = it?.id || "";
  document.getElementById('iname').value = it?.name || "";
  document.getElementById('iunit').value = it?.unit || "";
  document.getElementById('iqty').value = it?.qty ?? 0;
  document.getElementById('imin').value = it?.min ?? 0;
  document.getElementById('iprice').value = it?.price ?? 0;
  new bootstrap.Modal(document.getElementById('invModal')).show();
}
function saveInv(e){
  e.preventDefault();
  const it = {
    id: document.getElementById('iid').value || uid("inv"),
    name: document.getElementById('iname').value.trim(),
    unit: document.getElementById('iunit').value.trim(),
    qty: num(document.getElementById('iqty').value),
    min: num(document.getElementById('imin').value),
    price: num(document.getElementById('iprice').value),
  };
  let inv = LS.get("inventory", []);
  const i = inv.findIndex(x=>x.id===it.id);
  if(i>=0) inv[i]=it; else inv.push(it);
  LS.set("inventory", inv);
  bootstrap.Modal.getInstance(document.getElementById('invModal')).hide();
  logEvent("inv.save", `บันทึกคลัง: ${it.name}`);
  render();
}
function addQty(id){
  const n = num(prompt("เพิ่มจำนวนเท่าไหร่?", "1"));
  if(!n) return;
  const inv = LS.get("inventory", []);
  const it = inv.find(x=>x.id===id);
  it.qty = num(it.qty) + n;
  LS.set("inventory", inv);
  logEvent("inv.add", `เพิ่ม ${it.name} +${n} ${it.unit}`);
  render();
}
function useQty(id){
  const n = num(prompt("ใช้จำนวนเท่าไหร่?", "1"));
  if(!n) return;
  const inv = LS.get("inventory", []);
  const it = inv.find(x=>x.id===id);
  it.qty = Math.max(0, num(it.qty) - n);
  LS.set("inventory", inv);
  logEvent("inv.use", `ใช้ ${it.name} -${n} ${it.unit}`);
  render();
}
function delInv(id){
  if(!confirm("ลบรายการนี้?")) return;
  let inv = LS.get("inventory", []);
  const it = inv.find(x=>x.id===id);
  inv = inv.filter(x=>x.id!==id);
  LS.set("inventory", inv);
  logEvent("inv.delete", `ลบ ${it?.name||id}`);
  render();
}
</script>
</body>
</html>
